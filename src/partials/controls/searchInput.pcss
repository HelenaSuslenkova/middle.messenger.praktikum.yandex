.search-input-control {
  display: flex;
  background-color: var(--grey1);
  border-radius: 5px;
}

input.search-input[type="search"] {
  border: 1px solid var(--grey1);
  border-radius: 5px;
  width: 100%;
  height: 2rem;
  padding: 9px 4px 9px 40px;
  background: url("data:image/png;base64,") no-repeat 20px center;
  outline: none;
  resize: none;
  color: var(--grey2);
}

input.search-input[type="search"]:focus {
  box-shadow: 0 0 1px 0 var(--blue1);
  border-color: var(--blue1);
}
